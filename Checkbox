import 'package:flutter/material.dart';

void main() {
  runApp(const MyApp()); // Root widget
}
class MyApp extends StatelessWidget {
  
  const MyApp({super.key});

  @override
  Widget build(BuildContext context) {
    return const MaterialApp(
      debugShowCheckedModeBanner: false,
      home: MyHomePage(),
    );
  }
}

// Home Page - StatefulWidget
class MyHomePage extends StatefulWidget {
  const MyHomePage({super.key});

  @override
  State<MyHomePage> createState() => _MyHomePageState();
}


// State Class - State<MyHomePage>
class _MyHomePageState extends State<MyHomePage> {

String selectedValue = 'Python';



  @override
  Widget build(BuildContext context) {
  
    return Scaffold(
      
      appBar: AppBar(title: const Text("My Home Page")
      ),

      body:Column(
        children: [
          Text('Select your course',
          style: TextStyle(
            fontSize: 20
          ),
          ),
          DropdownMenu<String>(
            width: 500,

            initialSelection: 'Select your course',
            onSelected: (
              String?pickedValue)
              {
                setState(() {
                  selectedValue = pickedValue!;
                });
              },
            dropdownMenuEntries: [
              DropdownMenuEntry(value: 'Python', label: 'Python programming'),
              DropdownMenuEntry(value: 'Flutter', label: 'Flutter programming'),
              DropdownMenuEntry(value: 'Java', label: 'Java programming'),
              DropdownMenuEntry(value: 'C++', label: 'C++ programming'),
              DropdownMenuEntry(value: 'C#', label: 'C# programming'),
            ]),
            Text('selectedValue:$selectedValue'),
          
        ],
      ),
    );
  }
}
